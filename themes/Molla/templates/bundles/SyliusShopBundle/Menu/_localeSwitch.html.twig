{% if locales|length > 1 %}
	<li>
		<div class="header-dropdown" {{ sylius_test_html_attribute('locale-selector') }}>
			<a href="#" {{ sylius_test_html_attribute('active-locale') }}>{{ active|sylius_locale_name }}</a>
			<div class="header-menu">
				<ul>
					{% for code in locales %}
						{% if code is not same as(active) %}
							<li>
								<a href="{{ path('sylius_shop_switch_locale', {'code': code}) }}" {{ sylius_test_html_attribute('available-locale') }}>
									{{ code|sylius_locale_name }}
								</a>
							</li>
						{% endif %}
					{% endfor %}
				</ul>
			</div>
		</div>
	</li>
{% endif %}
